set sort = threads
set message_cachedir = ~/.cache/mutt/messages
set quote_regexp = "^(>[ \t]*)+"

set pager_stop
set pager_skip_quoted_context = 5
bind pager <up> previous-line
bind pager <down> next-line

set pipe_sep = ""
set pipe_split

bind  index G  imap-fetch-mail
bind  index g  noop
macro index gi "<change-folder>=INBOX<enter>"       "Go to Inbox"
macro index gs "<change-folder>=Spam<enter>"       "Go to Spam"
macro index gS "<change-folder>=Sent<enter>"       "Go to Sent"
macro index gd "<change-folder>=Drafts<enter>"       "Go to Drafts"
macro index gt "<change-folder>=Trash<enter>"       "Go to Trash"
macro index p  "<tag-pattern>~b \^diff\\ --git\\ a/<enter>"
macro index A  "<copy-message>.am.patch<enter><enter><shell-escape>git am .am.patch;rm .am.patch<enter>"
macro pager A  "<copy-message>.am.patch<enter><enter><shell-escape>git am .am.patch;rm .am.patch<enter>"
macro index L  "<limit>~T<enter><untag-pattern>all<enter>"
macro attach 'V' "<pipe-entry>iconv -c --to-code=UTF-8 > ~/.cache/mutt/mail.html<enter><shell-escape>$BROWSER ~/.cache/mutt/mail.html<enter>"

source ~/.local/share/mutt/gpg.rc
source ~/.mutt/accounts

