#!/usr/bin/env bash

manifest="${1:-.}"

CARGO_BUILD_TARGET_DIR="$manifest/target/coverage" RUSTFLAGS='-Cinstrument-coverage' cargo test ${@:2} &&
mkdir -p "$manifest/target/coverage/html" &&
grcov . --binary-path "$manifest/target/coverage/debug/deps/" -s . -t html --ignore-not-existing --ignore '../*' --ignore "/*" -o "$manifest/target/coverage"

