#!/usr/bin/env perl

$s = 0;
$n = 0;

while (<>) {
	s/^\s*(.*)$/\1/g;
	if (m/^\s*$/) { next; }
	if ($s) {
		if (scalar(() = m/''/g)&1) {
			s/^([^#]*)\R+$/\1/g;
			$s = 0;
		}
	} else {
		if (scalar(() = m/''/g)&1) {
			$s = 1;
		} else {
			s/^([^#]*)\R+$/\1/g;
		}
		if (!$n || m/^,/) {
			$n = 1;
		} else {
			print " ";
		}
	}
	print;
}
print "\n";
