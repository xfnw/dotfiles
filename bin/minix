#!/usr/bin/env perl

$s = 0;
$n = 0;

while (<>) {
	if (m/^\s*$/) { next; }
	if ($s) {
		if (scalar(() = m/''(?!\$)/g)&1) {
			if (!s/^([^#]*)\R+$/\1/g) { $n = -1; }
			$s = 0;
		}
	} else {
		s/^\s*(.*)$/\1/g;
		if (scalar(() = m/''(?!\$)/g)&1) {
			$s = 1;
		} else {
			if (!s/^([^#]*)\R+$/\1/g) { $n = -1; }
		}
		if ($n++ && !m/^,/) {
			print " ";
		}
	}
	print;
}
print "\n";
